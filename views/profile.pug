extends layout

block content

    
    #footer
        
        h1 #{user.username} |
    if user
              each item in specificBlogs
                .card.card-outline-primary.mb-3.text-center
                  .card-block
                    blockquote.card-blockquote
                      if user
                        a(href='/blog/' + item.id)
                          <h3>#{item.title}</h3>
                        p #{item.body}
                          footer #{item.createdAt}
                            a(href='https://twitter.com/intent/tweet/')
                              img#tweet(src='/img/tweet.png')
    else
              p Please login first.
